<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <!--头像-->
    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="110px"
        android:layout_height="110px"
        android:layout_marginBottom="40px"
        android:layout_marginLeft="34px"
        android:layout_marginTop="40px"
        android:background="@drawable/shape_discover_player_header"
        android:padding="5px">

        <ImageView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/level"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_gravity="right|bottom"
            android:background="@drawable/shape_discover_player_header"
            android:gravity="center"
            android:text="30"
            android:textColor="@color/main"
            android:textSize="16px" />


    </com.zhy.autolayout.AutoFrameLayout>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170px"
        android:layout_marginTop="60px"
        android:text="你爹临死前嘱托我"
        android:textColor="@color/color3"
        android:textSize="28px" />

    <TextView
        android:id="@+id/alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userName"
        android:layout_marginLeft="170px"
        android:layout_marginTop="20px"
        android:text="电信九"
        android:textColor="@color/color3"
        android:textSize="22px" />


    <ImageView
        android:layout_width="30px"
        android:layout_height="30px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px"
        android:layout_marginTop="80px"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/discover_icon_share" />

    <TextView
        android:id="@+id/score"
        android:layout_width="174px"
        android:gravity="center"
        android:layout_height="60px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="92px"
        android:layout_marginTop="64px"
        android:background="@drawable/shape_discover_player_score_bg"
        android:padding="5px"
        android:textColor="@color/white"
        android:textSize="24px" />


    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="190px"
        android:background="#f3f3f3" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="156px"
        android:layout_below="@id/line"
        android:gravity="center"
        android:weightSum="3">

        <!--段位-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_cn"
                android:layout_width="52px"
                android:layout_height="52px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_cn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:textColor="@color/color9"
                android:textSize="23px" />


        </com.zhy.autolayout.AutoLinearLayout>


        <!--胜率-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胜率"
                android:textColor="@color/color3"
                android:textSize="30px" />

            <TextView
                android:id="@+id/win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:textColor="@color/color6"
                android:textSize="20px" />


        </com.zhy.autolayout.AutoLinearLayout>


        <!--总局数-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总局数"
                android:textColor="@color/color3"
                android:textSize="30px" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:textColor="@color/color6"
                android:textSize="20px" />


        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:layout_below="@id/line"
        android:layout_marginTop="156px"
        android:background="#f3f3f3" />

    <TextView
        android:id="@+id/match"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_below="@id/line"
        android:layout_marginTop="176px"
        android:drawablePadding="16px"
        android:gravity="center_vertical"
        android:paddingLeft="25px"
        android:text="最近比赛"
        android:textColor="@color/color6"
        android:textSize="22px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/line"
        android:layout_marginTop="246px"
        android:background="#f3f3f3" />


</com.zhy.autolayout.AutoRelativeLayout>
