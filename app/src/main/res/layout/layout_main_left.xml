<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="640px"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">


    <ImageView
        android:id="@+id/left_header"
        android:layout_width="92px"
        android:layout_height="92px"
        android:layout_marginLeft="52px"
        android:layout_marginTop="42px"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/box_regist_userhead" />

    <TextView
        android:id="@+id/left_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34px"
        android:layout_marginTop="58px"
        android:layout_toRightOf="@id/left_header"
        android:text="未登录"
        android:textColor="@color/color3"
        android:textSize="30px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_nickname"
        android:layout_marginLeft="34px"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@id/left_header"
        android:text="登陆后找好友聊聊天"
        android:textColor="@color/color9"
        android:textSize="22px" />


    <ImageView
        android:id="@+id/left_setting"
        android:layout_width="30px"
        android:layout_height="30px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40px"
        android:layout_marginTop="76px"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/i_goto_setting_icon" />

    <TextView
        android:layout_width="1px"
        android:layout_height="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="76px"
        android:layout_toLeftOf="@id/left_setting"
        android:background="#bbbbbb" />


    <ImageView
        android:layout_width="14px"
        android:layout_height="23px"
        android:layout_marginRight="60px"
        android:layout_marginTop="78px"
        android:layout_toLeftOf="@id/left_setting"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/i_arrow_icon" />


    <TextView
        android:id="@+id/left_mall"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_below="@id/left_header"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="44px"
        android:background="@drawable/shape_main_left_shop_bg"
        android:gravity="center"
        android:text="装扮商城"
        android:textColor="@color/color3"
        android:textSize="23px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_below="@id/left_mall"
        android:gravity="center"
        android:weightSum="4">

        <!--我的好友-->
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/left_friend"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30px"
                android:layout_height="38px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/fanhe_icon_myfriend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:text="我的好友"
                android:textColor="#a0a0a0"
                android:textSize="21px" />


        </com.zhy.autolayout.AutoLinearLayout>


        <!--发起群聊-->
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/left_group"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40px"
                android:layout_height="36px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/fanhe_icon_mygroup" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:text="发起群聊"
                android:textColor="#a0a0a0"
                android:textSize="21px" />


        </com.zhy.autolayout.AutoLinearLayout>


        <!--收藏视频-->
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/left_fav"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40px"
                android:layout_height="36px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/fanhe_icon_myfav" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:text="收藏视频"
                android:textColor="#a0a0a0"
                android:textSize="21px" />


        </com.zhy.autolayout.AutoLinearLayout>


        <!--下载视频-->
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/left_download"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="38px"
                android:layout_height="40px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/fanhe_icon_download" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:text="下载视频"
                android:textColor="#a0a0a0"
                android:textSize="21px" />


        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>



</com.zhy.autolayout.AutoRelativeLayout>
