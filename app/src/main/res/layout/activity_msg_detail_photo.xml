<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.MsgDetailPictureActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mains"
        android:layout_marginBottom="88px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

    <!--顶部标题-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:alpha="0.6"
        android:background="@color/black">

        <ImageView
            android:id="@+id/finish"
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:padding="30px"
            android:scaleType="centerCrop"
            android:src="@drawable/nav_back_click" />


        <ImageView
            android:id="@+id/share"
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:padding="26px"
            android:scaleType="centerCrop"
            android:src="@drawable/box_icon_comment" />


    </com.zhy.autolayout.AutoRelativeLayout>


    <TextView
        android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@color/black"
        android:textColor="#66d2ff"
        android:textSize="26px" />

    <TextView
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="88px"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:padding="20px"
        android:text="下载"
        android:textColor="#66d2ff"
        android:textSize="26px" />

    <TextView
        android:id="@+id/descript"
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:layout_gravity="bottom"
        android:layout_marginBottom="88px"
        android:alpha="0.6"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="30px" />

</com.zhy.autolayout.AutoFrameLayout>
