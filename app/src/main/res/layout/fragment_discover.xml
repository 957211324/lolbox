<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:fitsSystemWindows="true">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/main">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发现"
            android:textColor="@color/white"
            android:textSize="34px" />


        <ImageView
            android:id="@+id/share"
            android:layout_width="44px"
            android:layout_height="8px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26px"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/box_actionbar_more_icon" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="234px"
        android:layout_marginTop="96px"
        android:gravity="center"
        android:weightSum="4">

        <!--盒吧-->
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/heBar"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/discover_icon_he_bar_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:text="盒吧"
                android:textColor="@color/color3"
                android:textSize="26px" />


        </com.zhy.autolayout.AutoLinearLayout>

        <!--动态-->
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/dongTai"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/discover_icon_moment_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:text="动态"
                android:textColor="@color/color3"
                android:textSize="26px" />


        </com.zhy.autolayout.AutoLinearLayout>

        <!--英雄-->
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/hero"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/discover_icon_hero_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:text="英雄"
                android:textColor="@color/color3"
                android:textSize="26px" />


        </com.zhy.autolayout.AutoLinearLayout>

        <!--游戏中心-->
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/game"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/discover_icon_h5game_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:text="游戏中心"
                android:textColor="@color/color3"
                android:textSize="26px" />


        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200px"
        android:layout_marginTop="350px"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_marginTop="50px"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/discover_icon_no_hero" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38px"
            android:text="添加LOL玩家角色，查战绩，看英雄"
            android:textColor="@color/color9"
            android:textSize="28px" />

        <TextView
            android:id="@+id/follow_add"
            android:layout_width="200px"
            android:layout_height="88px"
            android:layout_below="@id/tv_empty"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56px"
            android:background="@drawable/shape_msg_add_btn_bg"
            android:gravity="center"
            android:text="添加角色"
            android:textColor="@color/white" />


    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>
