<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/main">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关注"
            android:textColor="@color/white"
            android:textSize="34px" />


        <ImageView
            android:id="@+id/post"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/fanhe_icon_post_normal" />


        <ImageView
            android:id="@+id/follow"
            android:layout_width="36px"
            android:layout_height="42px"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:layout_toLeftOf="@id/post"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/fanhe_icon_follow" />

    </com.zhy.autolayout.AutoRelativeLayout>


    <ImageView
        android:id="@+id/icon_empty"
        android:layout_width="262px"
        android:layout_height="262px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270px"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/fanhe_empty" />


    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52px"
        android:text="暂无好友和播客动态"
        android:textColor="@color/color9"
        android:textSize="30px" />

    <TextView
        android:id="@+id/follow_add"
        android:layout_width="200px"
        android:layout_height="84px"
        android:layout_below="@id/tv_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44px"
        android:background="@drawable/shape_msg_add_btn_bg"
        android:gravity="center"
        android:text="添加关注"
        android:textColor="@color/white" />


</com.zhy.autolayout.AutoRelativeLayout>
